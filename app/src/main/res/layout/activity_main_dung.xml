<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iot.tdmu.edu.vn.smartteddy.ui.MainActivity"
    android:background="#1365fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:layout_marginBottom="0dp"
        android:background="#4104f4"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/teddytrai" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:checked="true"
            android:textOn="APP"
            android:layout_marginTop="5dp"
            android:thumb="@drawable/customswitchselector"
            android:track="@drawable/custom_track"
            android:textOff="TEDDY"
            android:layout_centerHorizontal="true"
            android:paddingTop="2dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_weight="0.04"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/teddyphai" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_access_alarms_black_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="SMART - TEDDY"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_chat_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="3dp"
        android:background="#b9c0fc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMusicVN"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/hatrutruyenthong"
                android:text="@string/nhacvn" />

            <ImageButton
                android:id="@+id/btnMusicEN"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/hatrungoaiquoc"
                android:text="@string/nhacnn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btnStory"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="@string/ketruyen"
                android:src="@drawable/chuyenkechobe" />

            <ImageButton
                android:id="@+id/btnConversation"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/cauthoai"
                android:text="@string/cauthoai"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
